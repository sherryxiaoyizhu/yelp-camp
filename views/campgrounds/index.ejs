<%- include("../partials/header") %> 

<header class="jumbotron">
	<h1><i class="fas fa-campground"></i> Welcome to YelpCamp!</h1>
	<div class="container">
		<p>View our hand-picked campgrounds from all over the world</p>
		<p>
			<a class="btn-primary btn-lg" href="/campgrounds/new">Add New Camground</a>
		</p>
		<p>
			<form action="/campgrounds" method="GET" class="form-inline">
				<div class="form-group">
					<input type="text" name="search" placeholder="Campground search..." class="form-control">
					<input type="submit" value="Search" class="btn-default ml-2">
				</div>
			</form>
		</p>
	</div>
</header>
	
<div class="row text-center" style="display:flex; flex-wrap:wrap;">
	<div class="col-md-12">
		<% if(noMatch !== null) { %>
			<h3><%= noMatch %></h3>
		<% } %>
	</div>
	<% campgrounds.forEach(function(campground){ %>
		<div class="col-lg-3 col-md-4 col-sm-6 mb-4"> 
			<div class="card">
				<img src="<%= campground.image %>" class="card-img-top" alt="<%= campground.name %>">
				<div class="card-body">
					<h5 class="card-title"><%= campground.name %></h5>
					<a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
				</div>
			</div>
		</div>
	<% }); %>
</div>

<%- include("../partials/footer") %>